{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Dauntless-Builder Perk Schema",
    "type": "object",
    "properties": {
        "name": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "type": {
            "type": "string"
        },
        "key": {
            "type": ["string", "array"]
        },
        "effects": {
            "type": "object",
            "patternProperties": {
                "^[1-6]$": {
                    "type": "object",
                    "properties": {
                        "description": {
                            "type": ["string", "array"]
                        },
                        "value": {
                            "type": ["number", "array", "null"]
                        }
                    },
                    "required": [
                        "description",
                        "value"
                    ],
                    "additionalProperties": false
                }
            }
        }
    },
    "required": [
        "name", "type", "effects"
    ],
    "additionalProperties": false
}
